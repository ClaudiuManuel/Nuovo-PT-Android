<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/calendar_workoutCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="14dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calendar_workoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Name"
                    android:textColor="#6A90B5"
                    android:textSize="20dp" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/calendar_workoutLengthTextView"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text="20" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Minutes" />
                    </LinearLayout>

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/split"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/calendar_workoutLevelTextView"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Beginner" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#EE6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Level" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/calendar_workoutIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_outline"
                    android:scaleType="centerInside"
                    android:src="@drawable/chest_primary_color" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calendarClientName"
                    android:layout_width="wrap_content"
                    android:text="Claudiu"
                    android:textSize="20sp"
                    android:textColor="@color/secondaryColor"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>