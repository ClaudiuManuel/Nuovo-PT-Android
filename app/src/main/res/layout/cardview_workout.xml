<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/workoutCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="14dp"
    app:cardBackgroundColor="@color/primaryTextColor"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/workoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Name"
                    android:textColor="#6A90B5"
                    android:textSize="24dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/workoutLengthTextView"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text="20" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Minutes" />
                    </LinearLayout>

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/split"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/workoutLevelTextView"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Beginner" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#EE6A90B5"
                            android:layout_height="wrap_content"
                            android:text="Level" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/workoutIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_outline"
                    android:scaleType="centerInside"
                    android:src="@drawable/chest_primary_color" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/workoutDateTextview"
                    android:layout_width="wrap_content"
                    android:text="24-02-2021"
                    android:textColor="#6A90B5"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/addToFavoritesButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/favorite_workout_border" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
